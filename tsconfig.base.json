{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "model-context-protocol-sdk": ["packages/sdk/src/index.ts"],
      "model-context-protocol-framework": ["packages/framework/src/index.ts"],
      "model-context-protocol-distributed-streamable-http-server-transport": [
        "packages/transports/server/distributed-streamable-http/src/index.ts"
      ],
      "model-context-protocol-webrtc-transport": [
        "packages/transports/webrtc-transport/src/index.ts"
      ],
      "model-context-protocol-opentelemetry-instrumentation": [
        "packages/opentelemetry/instrumentation/src/index.ts"
      ],
      "model-context-protocol-specification": ["packages/specification/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
